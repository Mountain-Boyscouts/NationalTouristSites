include index

#banner.container
    .row
        .col-lg-10
            .page-header
                h1 Users
    .row
        each user in users
            .col-md-6
                .panel.panel-primary
                    - var url = user.username;

                        .panel-heading
                            h3.panel-title
                                a(href="user/" + url) #{user.username}                                
                                button.pull-right.btn.btn-warning.col-md-4 Challenge Friend