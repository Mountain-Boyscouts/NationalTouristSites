extends index

block main
    #banner.container
        .row
            .col-lg-10
                .page-header
                    h1 Destinations
        .row
            each destination in destinations
                .col-lg-6.col-md-7
                    .panel.panel-primary
                        - var url = destination.id;
                            .panel-heading
                                h3.panel-title
                                    a(href="/destinations/" + url) #{destination.title}
                            .panel-body
                                p #{destination.description}
